<% layout('layout/boilerplate') -%>
        <div class="row">    
            <% for (let post of posts) { %>
                <div class="col-6 mt-3">
                    <div class="thought mt-1 ">
                        <% if(currentUser && currentUser.id == post.user.id){ %>
                        <div class="delete-header">
                            <form action="/<%= post.id %>/removethought?_method=DELETE" method="POST"><button id="simpleX" type="submit">X</button></form>
                        </div>
                        <% } %>
                        <div class="thought-headline ">
                            <div class="avatar ">
                                <img src="<%= post.user.profilePicture.url %>" class="img-fluid userIcon"alt="User Icon">
                            </div>
                            <a href="/<%= post.user.id %>/foreign"style="text-decoration: none" class="mt-3 userLink"><%= post.user.username %> </a>
                        </div>
                        <div class="thought-body mt-4">
                            <%= post.text %>
                        </div>
                        <div class="time-div mt-4">
                            <div>
                                <%= post.dateCreated %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>


